        <activity
            android:name=".pagProductos"
            android:screenOrientation="landscape"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustNothing">
        </activity>

        <activity
            android:name=".pagNuevoArticulo"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan">
        </activity>


        <activity
            android:name=".pagNuevaCategoria"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan">
        </activity>


        <activity
            android:name=".pagClientes"
            android:screenOrientation="landscape"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan" >
        </activity>


        <activity
            android:name=".pagRecuperarClave"
            android:screenOrientation="landscape"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan" >
        </activity>


        <activity
            android:name=".pagNewLogin"
            android:screenOrientation="landscape"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan" >
        </activity>




        <activity
            android:launchMode="singleInstance"
            android:name=".pagConfiguracion">
        </activity>


        <activity
            android:launchMode="singleInstance"
            android:name=".pagClavePersonal" >
        </activity>

    </application>

</manifest>