<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- #################################      Estilos de componentes de la tabla de productos -->
    <style name="botonVerde">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/boton_verde</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="botonAzul">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/boton_azul</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Blanco</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="botonEnviar">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/boton_enviar</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="botonRojo">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/boton_rojo</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">24sp</item>
    </style>




    <style name="TextoCentradoLargo">
        <item name="android:text">@string/tProducto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextoDerechaVUnidad">
        <item name="android:text">@string/tVUnidad</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextoCentradoCorto">
        <item name="android:text">@string/tCant</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextoDerechaVTotal">
        <item name="android:text">@string/tVTotal</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- ###############################################    Estilos de la barra de navegaciÃ³n-->
    <!-- Titulo negocio-->
    <style name="TituloNegocio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:text">@string/Empresa</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>
    <style name="FraseTituloNegocio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/Eslogan_empresa</item>
    </style>

    <!-- ###############################################    Estilos de la pagina de GUARDAR-->
    <!-- Titulo negocio-->

    <style name="TextosPagGuardar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- ###############################################    Estilos de la pagina de PRODUCTOS-->
    <style name="TextosPagProductos">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/Negro</item>
    </style>
    <style name="BotonesPagCategorias">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint">@color/Negro</item>
    </style>
    <style name="BotonesPagArticulos">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint">@color/Negro</item>
    </style>
    <style name="TextosPagArticulos">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
